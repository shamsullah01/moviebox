# MovieBox Clone Environment Variables
# Copy this file to .env and fill in your actual values

# MovieBox.ng API Configuration
REACT_APP_MOVIEBOX_API=https://moviebox.ng/api
REACT_APP_MOVIEBOX_WEB=https://moviebox.ng

# TMDB API Configuration (Get your key from https://www.themoviedb.org/settings/api)
REACT_APP_TMDB_API_KEY=your_tmdb_api_key_here
REACT_APP_TMDB_BASE_URL=https://api.themoviedb.org/3

# OMDb API Configuration (Get your key from http://www.omdbapi.com/apikey.aspx)
REACT_APP_OMDB_API_KEY=your_omdb_api_key_here
REACT_APP_OMDB_BASE_URL=https://www.omdbapi.com/

# Application Configuration
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development

# Analytics and Tracking
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
REACT_APP_UTM_SOURCE=moviebox-clone

# Optional: Custom CDN URLs
REACT_APP_IMAGE_CDN=https://your-cdn.com/images
REACT_APP_VIDEO_CDN=https://your-cdn.com/videos

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_API_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=3

# Social Media Links (for footer)
REACT_APP_GITHUB_URL=https://github.com/yourusername/moviebox-clone
REACT_APP_TWITTER_URL=https://twitter.com/yourusername
REACT_APP_DISCORD_URL=https://discord.gg/yourserver

# Contact Information
REACT_APP_SUPPORT_EMAIL=support@yourapp.com
REACT_APP_CONTACT_EMAIL=contact@yourapp.com
